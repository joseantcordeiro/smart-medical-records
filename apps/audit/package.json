{
	"name": "audit-worker",
	"version": "0.1.0",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"check:lint": "run-eslint",
		"check:types": "run-tsc",
		"db:generate": "drizzle-kit generate --config=drizzle-dev.config.ts",
		"db:migrate": "drizzle-kit migrate --config=drizzle-dev.config.ts",
		"db:studio": "drizzle-kit studio --config=drizzle-dev.config.ts",
		"dev": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
		"start": "node dist/index.js",
		"test": "run-vitest"
	},
	"dependencies": {
		"@repo/audit": "workspace:*",
		"bullmq": "5.56.0",
		"dotenv": "16.5.0",
		"drizzle-orm": "0.44.2",
		"ioredis": "5.6.1",
		"pg": "8.16.0",
		"pino": "9.7.0",
		"postgres": "3.4.7",
		"workers-tagged-logger": "0.13.0"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/tools": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "24.0.4",
		"@types/pg": "8.15.4",
		"drizzle-kit": "0.31.2",
		"nodemon": "3.1.4",
		"typescript": "5.5.4",
		"vitest": "3.2.4"
	}
}

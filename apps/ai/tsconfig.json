{
	"extends": "@repo/typescript-config/base.json",
	"include": [
		// These paths are relative to this tsconfig.json (apps/ai)
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		".mastra", // Mastra's build output
		".turbo",
		".vscode"
	],
	"compilerOptions": {
		"types": ["node"],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
